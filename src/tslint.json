{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ]
  },
  "defaultSeverity": "warning",
  "jsRules": {
    "quotemark": {
      "options": "single"
    }
  }
}
